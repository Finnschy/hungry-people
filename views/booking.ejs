<%- include("./partials/head.ejs") %>
    <%- include("./partials/header.ejs") %>
        <section class="SectionFlex">
            <article>
                <h2>BOOK A TABLE</h2>
                <hr class="hr">
                <form action="" class="bookingForm">  
                        <input type="text" name="name" id="name" placeholder="Name">
                        <input type="text" name="email" id="email" placeholder="Email">
                        <input type="number" name="phone" id="phone" placeholder="Phone">
                        <select name="people" id="people">
                            <option id ="people" disabled="disabled" selected="selected" class="selectColor">People</option>
                            <option value="one">1</option>
                            <option value="two">2</option>
                            <option value="three">3</option>
                            <option value="four">4</option>
                        </select>
                        <input type="number" name="date" id="date" placeholder="Date">
                    
                        <select name="time" id="time">
                            <option disabled="disabled" selected="selected" class="selectColor">Time</option>
                            <option value="one">1</option>
                            <option value="two">2</option>
                            <option value="three">3</option>
                            <option value="four">4</option>
                        </select>
                        <button class="bookingBtn formBtn">BOOK NOW</button>  
                </form>
            </article>
            <article class="imgGrid">
                <div class="imgGridImg bookingImg"></div>
                <div class="yellowBoxRight"></div>
            </article>
        </section>
        <p id="bookingTimes">Mon - Fri: 8PM - 10PM, Sat - Sun: 8PM - 3AM, Phone: +40 729 131 637/+40 726 458 782</p>
        <%- include("./partials/footer.ejs") %>